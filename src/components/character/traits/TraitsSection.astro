---
import type { Traits } from "../../../types/character.types";
import TraitsList from "./TraitsList.astro";

interface Props {
  traits: Traits;
}

const { traits } = Astro.props;
const { classFeatures, speciesTraits, feats } = traits;
---

<div class="space-y-8">
  <!-- Class Features -->
  <div
    class="bg-white rounded-lg shadow-md overflow-hidden border border-gray-200"
  >
    <h3 class="text-lg font-semibold bg-red-700 text-white px-4 py-2">
      Class Features
    </h3>
    <TraitsList traits={classFeatures} showLevel={true} />
  </div>

  <!-- Species Traits -->
  <div
    class="bg-white rounded-lg shadow-md overflow-hidden border border-gray-200"
  >
    <h3 class="text-lg font-semibold bg-red-700 text-white px-4 py-2">
      Species Traits
    </h3>
    <TraitsList traits={speciesTraits} />
  </div>

  <!-- Feats -->
  <div
    class="bg-white rounded-lg shadow-md overflow-hidden border border-gray-200"
  >
    <h3 class="text-lg font-semibold bg-red-700 text-white px-4 py-2">Feats</h3>
    <TraitsList traits={feats} />
  </div>
</div>
