---
import type { Coins } from "../../../types/character.types";

interface Props {
  coins: Coins;
}

const { coins } = Astro.props;

// Define coin types with their colors and symbols
const coinTypes = [
  { name: "platinum", color: "text-blue-500", symbol: "PT", value: coins.platinum },
  { name: "gold", color: "text-yellow-500", symbol: "GP", value: coins.gold },
  { name: "electrum", color: "text-gray-500", symbol: "EP", value: coins.electrum },
  { name: "silver", color: "text-gray-400", symbol: "SP", value: coins.silver },
  { name: "copper", color: "text-amber-600", symbol: "CP", value: coins.copper },
];
---

<div class="bg-gray-50 rounded-md px-3 py-4 border border-gray-200">
  <div class="grid grid-cols-5 gap-2">
    {coinTypes.map((coin) => (
      <div class="flex flex-col items-center">
        <div class={`size-10 rounded-full flex items-center justify-center ${coin.color} bg-white border-2 border-current`}>
          <span class="font-bold text-sm">{coin.symbol}</span>
        </div>
        <span class="mt-1 text-sm font-medium">{coin.value}</span>
        <span class="text-xs text-gray-500 capitalize">{coin.name}</span>
      </div>
    ))}
  </div>
</div>