---
import type { InventoryItem } from "../../../types/character.types";
import MaterialIcon from "../../ui/MaterialIcon.astro";

interface Props {
  items: InventoryItem[];
}

const { items } = Astro.props;
---

<div class="bg-gray-50 rounded-md overflow-hidden border border-gray-200">
  {items.length === 0 ? (
    <div class="p-4 text-center text-gray-500">No items in inventory</div>
  ) : (
    <ul class="divide-y divide-gray-200">
      {items.map((item) => (
        <li class="p-3 hover:bg-gray-100">
          <div class="flex justify-between items-start gap-4">
            <div>
              <h5 class="font-medium text-gray-800">{item.name}</h5>
              <p class="text-sm text-gray-600">{item.description}</p>
            </div>
            <div class="text-right">
              <div class="flex items-center justify-end text-sm text-gray-700">
                <MaterialIcon icon="inventory" class="text-gray-400 mr-1" />
                <span>x{item.quantity}</span>
              </div>
            </div>
          </div>
        </li>
      ))}
    </ul>
  )}
</div>