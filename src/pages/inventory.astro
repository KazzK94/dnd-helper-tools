---
import MainLayout from "../layouts/MainLayout.astro";
import { DEFAULT_CHARACTER } from "../data/defaultCharacter";
import InventorySection from "../components/character/inventory/InventorySection.astro";
import MaterialIcon from "../components/icons/MaterialIcon.astro";
---

<MainLayout title="Inventory | D&D Helper Tools">
  <div class="bg-white p-4 sm:p-6 rounded-lg shadow-md max-w-4xl mx-auto">
    <div class="mb-6 px-2.5">
      <h1
        class="text-2xl sm:text-3xl font-bold text-red-700 flex items-center gap-2"
      >
        <MaterialIcon icon="inventory_2" class="text-3xl" />
        Inventory
      </h1>
    </div>

    <InventorySection
      items={DEFAULT_CHARACTER.inventory.items}
      coins={DEFAULT_CHARACTER.inventory.coins}
    />
  </div>
</MainLayout>
