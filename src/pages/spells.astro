---
import MainLayout from "../layouts/MainLayout.astro";
import SpellList from "../components/character/spells/SpellList.astro";
import SpellcastingInfo from "../components/character/spells/SpellcastingInfo.astro";
import MaterialIcon from "../components/ui/MaterialIcon.astro";
import { loadCharacter } from "../services/characterService";

// Load character data
const character = loadCharacter();
---

<MainLayout title="Spells">
  <div class="bg-white p-4 sm:p-6 rounded-lg shadow-md max-w-4xl mx-auto">
    <h1
      class="text-2xl sm:text-3xl font-bold text-red-700 flex items-center gap-2 mb-6"
    >
      <MaterialIcon icon="auto_fix_high" class="!text-3xl sm:!text-4xl" />
      Spells
    </h1>

    <!-- Spellcasting information section -->
    <SpellcastingInfo character={character} />

    <!-- Spells list -->
    <SpellList />
  </div>
</MainLayout>
