---
import MainLayout from "../layouts/MainLayout.astro";
import TraitsSection from "../components/character/traits/TraitsSection.astro";
import { DEFAULT_CHARACTER } from "../data/defaultCharacter";
import MaterialIcon from "../components/icons/MaterialIcon.astro";
---

<MainLayout title="Character Traits | D&D Helper">
  <div class="bg-white p-4 sm:p-6 rounded-lg shadow-md max-w-4xl mx-auto">
    <h1
      class="text-2xl sm:text-3xl font-bold text-red-700 flex items-center gap-2 mb-6"
    >
      <MaterialIcon icon="psychology" />
      Character Traits
    </h1>

    <TraitsSection traits={DEFAULT_CHARACTER.traits} />
  </div>
</MainLayout>
